generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Users{
  id              String    @id @default(uuid())
  username        String    @unique
  email           String    @unique
  password        String
  role            Role      @default(USER)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  vehicles        Vehicles[]

  @@index([email])
  @@index([username])
  @@map("users")
}

enum Role {
  ADMIN
  USER
}

model Vehicles{
  id              String    @id @default(uuid())
  alias           String
  model           Int
  plate           String    @unique
  currentMileage  Int
  userId          String
  Users           Users     @relation(fields: [userId], references: [id], onDelete: Cascade)
  routes          Routes[]
  refuels         Refuels[]
  services        Services[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId])
  @@index([plate])
  @@map("vehicles")
}

model Routes{
  id              String    @id @default(uuid())
  distance        Float
  date            DateTime
  notes           String?
  vehicleId       String
  vehicles        Vehicles   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt


  @@index([vehicleId])
  @@index([date])
  @@map("routes")
}

model Refuels{
  id              String    @id @default(uuid())
  type            String
  gallons         Float
  cost            Float
  date            DateTime
  notes           String?
  vehicleId       String
  vehicles        Vehicles   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt


  @@index([vehicleId])
  @@index([date])
  @@map("refuels")
}

model Services{
  id              String    @id @default(uuid())
  serviceType     String
  cost            Float
  date            DateTime
  mileage         Int
  provider        String
  description     String?
  nextServiceAt   DateTime?
  nextNotes       String?
  nextMileage     Int?
  vehicleId       String
  vehicles        Vehicles   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt


  @@index([vehicleId])
  @@index([date])
  @@map("services")
}